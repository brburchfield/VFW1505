Titanium.UI.setBackgroundColor('#000');

var painters = [{title: "Leonardo Da Vinci"}, {title: "Donatello"}, {title: "Michaelangelo"}, {title: "Raphael"}];
var composers = [{title: "Composer1"}, {title: "Composer2"}, {title: "Composer3"}, {title: "Composer4"}];

