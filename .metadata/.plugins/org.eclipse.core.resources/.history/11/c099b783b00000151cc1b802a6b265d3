Ti.UI.setBackgroundColor("#000");

//Main Window
var introWindow = Ti.UI.createWindow({
	backgroundColor: "#595959"
});

//Menu Button View
var introButton = Ti.UI.createView({
	backgroundColor: "#fff",
	height: 100,
	width: 300,
	borderRadius: 10
});

//Menu Button Label
var buttonText = Ti.UI.createLabel({
	text: "View Gallery",
	color: "#000",
	font: {fontSize: 20, fontFamily: "Helvetica", fontWeight: "bold"},
	textAlign: "center"
});

//Loading gallerycode.js
var loadFile = require("gallerycode");

introWindow.add(introButton);
introButton.add(buttonText);
introWindow.open();
